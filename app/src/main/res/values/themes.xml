<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RaifFTS" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorDark1</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorBrand</item>
        <item name="colorOnSecondary">@color/colorDark1</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
        <item name="android:colorBackground">@color/colorDark2</item>
    </style>

    <style name="Theme.RaifFTS.AppTextAppearance" />

    <style name="Theme.RaifFTS.AppTextAppearance.Subheading">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.RaifFTS.AppTextAppearance.Hint">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white_a25</item>
    </style>

    <style name="Theme.RaifFTS.Controls" />

    <style name="Theme.RaifFTS.Controls.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:textColorHint">@color/white</item>
        <item name="boxBackgroundColor">@color/colorDark5</item>
        <item name="boxCornerRadiusBottomEnd">4dp</item>
        <item name="boxCornerRadiusBottomStart">4dp</item>
        <item name="boxCornerRadiusTopEnd">4dp</item>
        <item name="boxCornerRadiusTopStart">4dp</item>
        <item name="hintTextAppearance">@style/Theme.RaifFTS.AppTextAppearance.Hint</item>
        <item name="hintTextColor">@color/white</item>
    </style>

    <style name="Theme.RaifFTS.Controls.TextInputLayout.InputDate">
        <item name="endIconDrawable">@drawable/ic_calendar</item>
        <item name="endIconMode">custom</item>
        <item name="endIconTint">@color/white</item>
    </style>

    <style name="Theme.RaifFTS.Controls.TextInputEditText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textCursorDrawable">@drawable/cursor_drawable</item>
    </style>

    <style name="Theme.RaifFTS.Controls.TextInputEditText.Name">
        <item name="android:inputType">textCapWords</item>
    </style>

    <style name="Theme.RaifFTS.Controls.TextInputEditText.Number">
        <item name="android:inputType">phone</item>
    </style>

    <style name="Theme.RaifFTS.Controls.TextInputEditText.Date">
        <item name="android:editable">false</item>
    </style>

</resources>